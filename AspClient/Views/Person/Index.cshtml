@model IEnumerable<AspClient.Models.Person>
@{
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Web API Result</title>
    </head>
    <body>
        <table>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
            @foreach (var P in Model)
            {
                <tr>
                    <td>@P.Id</td>
                    <td>@P.FirstName</td>
                    <td>@P.LastName</td>
                </tr>
            }
        </table>
        <form action="@Url.Action("CreateNewPerson", "Person")" method="post">
            <div>
                <label>FirstName</label>
                <input type="text" name="firstName" />
            </div>
            <div>
                <label>LastName</label>
                <input type="text" name="lastName" />
            </div>
            <button type="submit">Create new person</button>
        </form>
        <form action="@Url.Action("GetPersonById", "Person")" method="post">
            <div>
                <label>ID</label>
                <input type="text" name="id" />
            </div>
            <button type="submit">Get Person</button>
        </form>

        <form action="@Url.Action("UpdatePerson", "Person")" method="post">
            <div>
                <label>ID</label>
                <input type="text" name="id" />
            </div>
            <div>
                <label>FirstName</label>
                <input type="text" name="firstName" />
            </div>
            <div>
                <label>LastName</label>
                <input type="text" name="lastName" />
            </div>
            <button type="submit">Update person</button>
        </form>
        <form action="@Url.Action("DeletePerson", "Person")" method="post">
            <div>
                <label>ID</label>
                <input type="text" name="id" />
            </div>
            <button type="submit">Delete person</button>
        </form>

    </body>
</html>

